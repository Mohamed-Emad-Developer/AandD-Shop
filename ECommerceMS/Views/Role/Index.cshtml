@model IEnumerable<ECommerceMS.ViewModel.RoleViewModel>

@{
    ViewData["Title"] = "Index";
}

@*<h1>Index</h1>
*@

<table class="table table-dark table-striped w-75 m-auto">
    <thead>
        <tr>
            @*  <th>
                @Html.DisplayNameFor(model => model.ID)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleName)
                </td>
                <td class="table-row">
                    <div class="test">
                        <button class="btn btn-success">
                            @Html.ActionLink("Edit", "EditRole",
                        new {  id=item.Id  },
                        htmlAttributes:new{@class="edit-item"})
                        </button>
                        <button class="btn btn-danger">
                            @Html.ActionLink("Delete", "DeleteRole","Role",
                        new {  id=item.Id  },
                        htmlAttributes:new{@class="delete-item"})
                        </button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<p class="text-center mt-2">
    <button class="btn btn-success">
        <a asp-action="AddRole" class="create">Create Role</a>
    </button>
</p>

@section Scripts{
<script src="~/js/main.js"></script>
}

@section Style {
<link href="~/css/role.css" rel="stylesheet" type="text/css" />
}