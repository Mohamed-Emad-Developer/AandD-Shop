@model IEnumerable<ECommerceMS.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>
<hr />

<p>
    <a asp-action="Create" class ="btn btn-primary" style="margin:10px;color:white">Create New Product</a>
</p>
<hr />

<table class="table table-responsive-sm table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Image
            </th>
            <th>
                Price
            </th>
            <th>
                Quantity
            </th>
            <th>
                Category
            </th>
            <th>
                Details
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <img src="~/Images/Products/@item.Image" width="300" height="300" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StockQuantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Title)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class ="btn btn-secondary w-100">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
