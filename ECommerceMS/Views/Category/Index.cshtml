@model IEnumerable<ECommerceMS.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<hr id="scroll" />
<h2 style="text-align:center;font-family:'Courgette',cursive;font-size:50px">Categories</h2>
<hr />
<div class="d-flex justify-content-between">
    <a asp-action="Create" class="btn btn-danger">Create New Category</a>

    <form asp-controller="Category" asp-action="Index" method="get">
        @if (@Model.Count() == 0)
        {
            <p class="text-center">No Match any Category</p>
        }
        else
        {
            <div class="input-group">
                <div class="form-outline">
                    <input type="search" id="searchString" class="form-control" placeholder="Search" name="searchString" />
                </div>
                <button type="submit" class="btn btn-danger">
                    <i>🔍</i>
                </button>
            </div>
        }
    </form>
</div>
<br />

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4  col-md-6">
                <div class="thumbnail">
                    <div class="caption" style="text-align:center">
                        <a asp-action="Details" asp-route-id="@item.Id"><img src="~/Images/Categories/@item.Image" /></a>
                        <p></p>
                        <p style="font-size:20px">@item.Title</p>
                        <br>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
<br />