@model ECommerceMS.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this category?</h3>
<div>
    <hr />
    <div class="thumbnail">
                    <div class="caption" style="text-align:center">
                       <a asp-action="Details" asp-route-id="@Model.Id"><img src="~/Images/Categories/@Model.Image" /></a>
                        <p></p>
                        <p style="font-size:20px">@Model.Title</p>
                        <br>
                    </div>
               </div>
    <form asp-action="Delete">
        <input type="submit" value="Delete Category" class="btn btn-danger delete-item" />
        <a asp-action="Index" class="btn btn-secondary ">Back to List</a>
    </form>
</div>

@section Scripts{
    <script src="~/js/main.js">/*delete-item*/</script>
}