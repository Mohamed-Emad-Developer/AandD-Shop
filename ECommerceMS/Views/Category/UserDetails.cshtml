@model Category
@{
    ViewData["Title"] = Model.Title+" "+"Category";
}

<div class="thumbnail">
    <div class="caption" style="text-align:center">
        <img src="~/Images/Categories/@Model.Image" />
        <p style="font-size:20px">@Model.Title</p>
        <br>
    </div>
</div>
<hr />

<div class="container">
    <div class="row">
        @foreach (var item in Model.Products)
        {
            <div class="col-lg-4 col-md-6">
                <div class="card">
                    <div class="d-flex justify-content-between">
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Id" class="btn" style="font-size: 30px; text-align: left;">🛒</a>
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Id" class="btn" style="font-size: 30px; text-align: right;">❤️</a>
                    </div>
                    <img src="~/Images/Products/@item.Image" class="card-img-top" style="height: 300px;">
                    <div class="card-body" style="text-align: center;">
                        <h4>@item.Name</h4>
                        <h4>@item.Price $</h4>
                        <a asp-controller="Products" asp-action="CustomerDetails" asp-route-id="@item.Id" class ="btn btn-secondary w-100">Details</a>
                    </div>
                </div>
                 <br>
            </div>
        }
    </div>
</div>
<hr />

